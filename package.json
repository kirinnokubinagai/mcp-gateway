{
  "name": "mcp-gateway",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run dev:server\" \"bun run dev:web\" \"bun run dev:client\"",
    "dev:server": "bun --watch server/index.ts",
    "dev:web": "bun --watch server/web-server.ts",
    "dev:client": "bunx --bun vite",
    "build": "tsc -b && vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "preview": "vite preview",
    "lint": "eslint .",
    "start": "concurrently -k \"npm run proxy\" \"docker-compose up\"",
    "start:dev": "npm run build && npm run build:server && docker-compose up",
    "stop": "docker-compose down && pkill -f 'node.*server.js' || true",
    "logs": "docker-compose logs -f",
    "mcp": "./mcp-gateway-direct",
    "mcp:no-ui": "MCP_NO_UI=true ./mcp-gateway-direct",
    "proxy": "cd mcp-proxy-server && npm install && npm run build && node dist/server.js",
    "proxy:smart": "cd mcp-proxy-server && npm install && npm run build && node dist/start-if-needed.js"
  },
  "dependencies": {
    "@hono/node-server": "^1.0.0",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.12",
    "@rollup/rollup-darwin-arm64": "^4.44.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "hono": "^4.0.0",
    "lucide-react": "^0.523.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "serve": "^14.2.4",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/bun": "^1.2.17",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.3",
    "@types/react-dom": "^19.0.2",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.13.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.1",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.17.0",
    "vite": "^6.0.5"
  }
}
