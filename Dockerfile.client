# Bunをベースイメージとして使用
FROM oven/bun:1-alpine AS builder

WORKDIR /app

# 依存関係のインストール
COPY package.json ./
RUN bun install

# ソースコードをコピー
COPY . .

# ビルド
RUN bun run build

# 実行用の軽量イメージ
FROM oven/bun:1-alpine

WORKDIR /app

# ビルド成果物をコピー
COPY --from=builder /app/dist ./dist
COPY --from=builder /app/package.json ./

# 実行用の依存関係のみインストール
RUN bun install --production

EXPOSE 3002

# Viteのプレビューサーバーを使用（環境変数でポートを指定）
CMD ["bun", "run", "preview", "--", "--host", "0.0.0.0", "--port", "3002"]